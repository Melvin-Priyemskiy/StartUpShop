<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewEvent"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewCompanyToCustomerOrder"
            android:layout_width="374dp"
            android:layout_height="97dp"
            android:text="Items Ordered: "
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompanyName" />

        <TextView
            android:id="@+id/textViewTotalCostOfitemsFromCompany"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Amount: "
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompanyToCustomerOrder" />

        <TextView
            android:id="@+id/textviewStatusFromCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            app:layout_constraintEnd_toEndOf="@+id/textViewCompanyToCustomerOrder"
            app:layout_constraintTop_toTopOf="@+id/textViewTotalCostOfitemsFromCompany" />

        <TextView
            android:id="@+id/textViewEventNumberOfAttendees"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="164dp" />

        <TextView
            android:id="@+id/textViewCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/textViewCompanyToCustomerOrder"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/textviewStatusFromCompany"
            app:layout_constraintTop_toTopOf="@+id/textviewStatusFromCompany"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/textViewTotalCostOfitemsFromCompany"
            app:layout_constraintTop_toTopOf="@+id/textViewTotalCostOfitemsFromCompany"
            app:srcCompat="@android:drawable/ic_input_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>